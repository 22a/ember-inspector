<div class="filter-bar">
  <div class="filter-bar__search">
    {{input type="search" value=search placeholder="Search"}}
  </div>
  <div class="filter-bar__pills">
    <div data-label="filter" {{bind-attr class="noFilter:filter-bar__radio_selected :filter-bar__radio :filter-bar__radio_separate"}} {{action "setFilter" "all"}}>
      All
    </div>
    <div data-label="filter" {{bind-attr class="isRejectedFilter:filter-bar__radio_selected :filter-bar__radio"}} {{action "setFilter" "rejected"}} >Rejected</div>
    <div data-label="filter" {{bind-attr class="isPendingFilter:filter-bar__radio_selected :filter-bar__radio"}} {{action "setFilter" "pending"}} >Pending</div>
    <div data-label="filter" {{bind-attr class="isFulfilledFilter:filter-bar__radio_selected :filter-bar__radio"}} {{action "setFilter" "fulfilled"}} >Fulfilled</div>
  </div>

  <div {{action "clear"}} class="filter-bar__clear pill" data-label="clear-promises-btn">CLEAR</div>
</div>